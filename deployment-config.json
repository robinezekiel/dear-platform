{
  "name": "dear-platform-production",
  "version": "1.0.0",
  "environment": "production",
  "deployment": {
    "platform": "vercel",
    "region": "us-east-1",
    "scaling": {
      "minInstances": 2,
      "maxInstances": 10,
      "targetCPU": 70
    }
  },
  "database": {
    "provider": "neon",
    "poolSize": 20,
    "connectionTimeout": 30000,
    "backups": {
      "frequency": "daily",
      "retention": "30 days"
    }
  },
  "monitoring": {
    "healthCheck": "/api/health",
    "metricsEndpoint": "/api/metrics",
    "alerting": {
      "errorRate": 5,
      "responseTime": 2000,
      "uptime": 99.9
    }
  },
  "security": {
    "httpsOnly": true,
    "hsts": true,
    "rateLimiting": true,
    "cors": {
      "origins": ["https://dear-platform.com"],
      "credentials": true
    }
  }
}
